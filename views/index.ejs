    <div class="bodyGame">
        <div>
            <div class="gameTitle">
            <div>
                <h1>Coding Quiz</h1>
                <p><%= locals.question %></p>
            </div>
            <div class="options">
                <form method="POST" action="/options">
                    <button type="submit" name="option" value="1">1 <%= locals.option1 %> </button>
                    <button type="submit" name="option" value="2">2 <%= locals.option2 %></button>
                    <button type="submit" name="option" value="3">3 <%= locals.option3 %></button>
                    <button type="submit" name="option" value="4">4 <%= locals.option4 %></button>
                </form>
            </div>
        </div>
        </div>
    </div>
    <div class="score">
        <p>score: <%= locals.score %></p>
    </div>
